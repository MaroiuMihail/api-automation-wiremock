{
  "request": {
    "method": "POST",
    "urlPath": "/api/auth/token",
    "bodyPatterns": [
      { "matchesJsonPath": "$[?(@.username == 'admin')]" },
      { "matchesJsonPath": "$[?(@.password == 'secret')]" }
    ]
  },
  "response": {
    "status": 200,
    "headers": { "Content-Type": "application/json" },
    "jsonBody": {
      "token": "valid-token-1234567890",
      "tokenType": "Bearer",
      "expiresIn": 3600
    }
  }
}
